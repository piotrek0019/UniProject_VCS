@model UniProject.Models.News
@{
    ViewBag.Title = "EditNews";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

@Html.ActionLink("Back to menu", "Index", "Admin", null, new { @class = "btn btn-outline-primary" })
<h2>Edit News</h2>

@using (Html.BeginForm("EditNews", "Admin"))
{
    <div class="formm-group">
        @Html.LabelFor(n => n.Title)
        @Html.TextBoxFor(n => n.Title, new { @class = "form-control myTextBox50" })
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Content)
        @Html.TextAreaFor(n => n.Content, 20, 80, new { @class = "form-control required" })
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-outline-primary">Save</button>
}