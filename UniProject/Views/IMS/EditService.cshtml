@model UniProject.Models.IMS.Service
@{
    ViewBag.Title = "EditService";
    Layout = "~/Views/Shared/_IMS_Layout.cshtml";
}

<h2>EditService</h2>

@using (Html.BeginForm("EditService", "IMS", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Name)
        @Html.TextBoxFor(s => s.Name, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Price)
        @Html.TextBoxFor(s => s.Price, new { @class = "form-control" })
    </div>
    
    @Html.AntiForgeryToken()
    @Html.HiddenFor(s => s.Id)
    
    <button type="submit" class="btn btn-primary">Save</button>
}