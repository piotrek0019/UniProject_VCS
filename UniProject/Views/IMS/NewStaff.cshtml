@model UniProject.Models.IMS.Staff
@{
    ViewBag.Title = "NewStaff";
    Layout = "~/Views/Shared/_IMS_Layout.cshtml";
}

<h2>NewStaff</h2>

@using (Html.BeginForm("NewStaff", "IMS", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Name)
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Adress)
        @Html.TextBoxFor(s => s.Adress, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.City)
        @Html.TextBoxFor(s => s.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.PostCode)
        @Html.TextBoxFor(s => s.PostCode, new { @class = "form-control" })
    </div>
    
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Save</button>
}